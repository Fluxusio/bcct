{#
/**
* @file
* Default theme implementation for Omise bank account.
*
* Available variables
* - bankAccount: Array with data from Omise.
    [object] => bank_account
    [brand] => bbl
    [last_digits] => 7890
    [name] => tester name
    [created] => 2018-04-09T11:08:32Z
*/
#}
<div class="form-item js-form-item form-wrapper js-form-wrapper panel panel-default">

    <div class="panel-heading">
        <div class="panel-title">{{ "Bank details for payments and transfers"|t }}</div>
    </div>



    <div class="panel-body">
        <div class="omise-bank-account-wrapper">
            {% if bankAccount %}
                <div class="BankInfo">
                    <div class="BankLogo" style="background: {{ bankAccount.brand.color }};">
                        <img src="{{ bankAccount.brand.logo }}" alt="{{ bankAccount.brand.name }}" width="48" height="48">
                    </div>

                    <div class="BankAccountNumber" style="color:{{ bankAccount.brand.color }};">
                        ************{{ bankAccount.last_digits }}
                    </div>

                    <div class="BankAttribute">
                        <strong>{{ "Name"|t }}</strong>
                        {{ bankAccount.name }}
                    </div>

                    <div class="BankAttribute">
                        <strong>{{ "Bank"|t }}</strong> {{ bankAccount.brand.name }}
                    </div>
                    <div class="BankAttribute AccountStatus">
                        {% if bankAccount.verified %}
                            <i class="fa fa-check" style="color:green;"></i><span class="status verified">{{ "Bank account verified by Omise"|t }}</span>
                        {% else %}
                            <i class="fa fa-close" style="color:red;"></i><span class="status pending">{{ "Bank account pending verification"|t }}</span>
                        {% endif %}
                        <br/>
                        {% if bankAccount.active %}
                            <i class="fa fa-check" style="color:green;"></i> <span class="status active">{{ "Bank account activated and ready to use"|t }}</span>
                        {% else %}
                            <i class="fa fa-close" style="color:red;"></i><span class="status pending">{{ "Bank account pending activation"|t }}</span>
                        {% endif %}
                    </div>

                    <button class="button button--secondary btn-default btn icon-before remove-omise-bank-account" id="{{ bankAccount.id }}" entityId="{{ bankAccount.entityId }}" entityType="{{ bankAccount.entityType }}" entityField="{{ bankAccount.entityField }}" name="op" value="{{ "Remove"|t }}"><span class="icon glyphicon glyphicon-remove" aria-hidden="true"></span>
                        {{ "Remove"|t }}</button>

                </div>

            {% else %}
                {{ "No bank account info found"|t }}
            {% endif %}
        </div>
    </div>
</div>